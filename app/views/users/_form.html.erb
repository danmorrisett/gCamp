<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
<div class="form-group">
  <% if @user.errors.any? %>
    <div class="col-sm-offset-2 col-md-7">
      <div class="alert alert-danger" role="alert">
        <h3><% pluralize(@user.errors.count, "errors") %>
          <%= "1 error prohibited this form from being saved" %></h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    </div>
  <% end %>
</div>
<% end %>

<%= form_for @user, html: { class: "form-horizontal" } do |f| %>
<div class="form-group">
  <%= f.label :first_name, class: "col-sm-2 control-label" %>
  <div class="col-sm-6">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <tr>
  <%= f.label :last_name, class: "col-sm-2 control-label" %>
  <div class="col-sm-6">
    <%= f.text_field :last_name, class: "form-control" %>
  </tr>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "col-sm-2 control-label" %>
  <div class="col-sm-6">
    <%= f.text_field :email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-6">
    <%= f.submit class: "btn btn-primary"%>
    <%= link_to "Cancel", users_path, class: "btn btn-default" %>
  </div>
</div>

<% if @user.id %>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-6">
    <div class= "text-center">
      <div class= "Well">
        <%= link_to "Delete", user_path(@user), method: :delete, class: "btn btn-danger", data:{confirm: "Are you sure?"}%>
      </div>
    </div>
  </div>
</div>
<% end %>


<% end %>
