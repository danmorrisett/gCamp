<div class= "container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to 'New User', new_user_path, class: "btn btn-info" %>
    </div>
    <h1>Users</h1>
  </div>

  <table class= "table">
    <thead>
      <tr>
        <th> Name </th>
        <th> Email </th>

      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <p><td><%= link_to user.first_name.capitalize + ' ' + user.last_name.capitalize, user_path(user) %></td></p>
        <td><%= mail_to user.email %></td>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>




























</div>
