<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <a class="navbar-brand" href="#">gCamp</a>
  </nav>
</div>

  <% flash.each do | value | %>
  <div class="alert alert-success", role="alert">
    <div class="text-center">
      <%= flash[:notice] %>
    </div>
  </div>
  <% end %>

<%= yield %>
<div class="container">
<!-- </body> -->
<footer>
<!-- <body> -->

    <hr></hr>

    <div class = "row">
      <div class = "col-md-4">
        <%= link_to "Terms", terms_path(@terms)%>
        |
        <%= link_to "About", about_path(@about)%>
        |
        <%= link_to "FAQ", faq_path(@faq)%>
        |
        <%= link_to "Tasks", tasks_path(@tasks)%>
      </div>
      <div class = "col-md-8 text-right">
        <%= link_to image_tag('link.jpg', class: "footer_icon"), "https://www.linkedin.com/profile/public-profile-settings?trk=prof-edit-edit-public_profile" %>
        <%= link_to image_tag('GitHub.png', class: "footer_icon"), "https://github.com/danmorrisett" %>
        <%= link_to image_tag('Twitter.png', class: "footer_icon"), "https://twitter.com/@Dan_Morrisett" %>
        <%= link_to image_tag('galvanize.png', class: "footer_icon"), "https://students.gschool.it/students/277" %>
      </div>
    </div>
</footer>
</div>
</div>
</body>
</html>
