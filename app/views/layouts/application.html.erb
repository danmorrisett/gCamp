<html>
<head>
  <title>Gcamp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <a class="navbar-brand" href="#">gCamp</a>
  </nav>
</div>
<div class="container">
  <% flash.each do | value | %>
  <div class="alert alert-success", role="alert">

      <%= flash[:notice] %>

  </div>
  <% end %>
</div>

<div>
  <% if current_user %>
    <%= link_to "Sign Out", signout_path %>
  <% else %>
    <%= link_to "Sign Up", signup_path %>
    |
    <%= link_to "Sign In", signin_path %>
  <% end %>
</div>



<%= yield %>
<div class="container">
<!-- </body> -->
<footer>
<!-- <body> -->

    <hr></hr>

    <div class = "row">
      <div class = "col-md-4">
        <%= link_to "Terms", terms_path%>
        |
        <%= link_to "About", about_path%>
        |
        <%= link_to "FAQ", faq_path%>
        |
        <%= link_to "Tasks", tasks_path%>
        |
        <%= link_to "Users", users_path%>
        |
        <%= link_to "Projects", projects_path%>
      </div>
      <div class = "col-md-8 text-right">
        <%= link_to image_tag('link.jpg', class: "footer_icon"), "https://www.linkedin.com/profile/public-profile-settings?trk=prof-edit-edit-public_profile" %>
        <%= link_to image_tag('GitHub.png', class: "footer_icon"), "https://github.com/danmorrisett" %>
        <%= link_to image_tag('Twitter.png', class: "footer_icon"), "https://twitter.com/@Dan_Morrisett" %>
        <%= link_to image_tag('galvanize.png', class: "footer_icon"), "https://students.gschool.it/students/277" %>
      </div>
    </div>
</footer>
</div>
</div>
</body>
</html>
