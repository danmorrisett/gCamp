<%= form_for @task, html: { class: "form-horizontal" } do |f| %>
  <div class="form-group">
    <div class="col-sm-offset-1 col-md-7">
    <%= render partial: 'shared/errors', locals: {object: @task }%>
    </div>
  </div>


  <div class="form-group">
    <%= f.label :description, class: "col-sm-1 control-label" %>
    <div class="col-sm-6">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class: "col-sm-1 control-label" %>
    <div class="col-sm-3">
      <%= f.date_field :due_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-6">
    <% if @task.id %>
    <%= f.check_box :complete %>
    <%= f.label :complete %>
    <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-6">
      <%= f.submit class: "btn btn-primary"%>
      <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
    </div>
  </div>

<% end %>
