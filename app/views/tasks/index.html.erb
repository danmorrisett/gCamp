<div class="container">
  <div class="page-header">
    <h1>Listing Tasks</h1>
  </div>




  <% @task.each do |task| %>

  <table class= "table">
    <head>
  <th> Description </th>
  </thead>
    <tr>
        <td><%= link_to task.description, task_path(task) %>
          <div class= "pull-right">
            <%= link_to "Edit", edit_task_path(task), class: "btn btn-info" %>
            <%= link_to "Delete", edit_task_path(task), method: :delete, class: "btn btn-danger" %>
          </div>
        </td>
      </tr>
    </table>

    <% end %>

    <%= link_to 'New Task', new_task_path %>

  </div>
